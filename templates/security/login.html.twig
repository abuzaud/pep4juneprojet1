{% extends 'layout.html.twig' %}
{% trans_default_domain 'login' %}
{% block page_title %}
    {{ 'security.login' | trans }}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">

            <h2 class="text-center">
                {{ 'security.login' | trans }}
            </h2>

            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {{ form(form) }}
        </div>
    </div>
{% endblock %}

